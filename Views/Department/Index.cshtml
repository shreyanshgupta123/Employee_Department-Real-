@model IEnumerable<Employee_Department.Models.Department>
@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
      <div class="col-12">
          <h1 class="text-info text-black center p-1 boarder boarder-dark">Department Details</h1>
            <div class="col-6">
                <input type="text" placeholder="Search here..." id="txtSearch" class="form-control m-1 float-end" style="width:50%;" />
            </div>
<div class="float-left">
    <a class="btn btn-sm btn-warning m-1 p-1" asp-action="AddDepartment" asp-controller="Department">Add Department</a>

</div>
      </div>
      <table class="table table-boardered text-center">
      <thead class="bg-dark text-light">
          <tr>
              <th>Department ID</th>
              <th>Department Name</th>
                <th>Department Code</th>
                <th>Action</th>
          </tr>
      </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.DepartmentID</td>
                    <td>@d.DepartmentName</td>
                    <td>@d.Departmentcode</td>
                    <td>
                            <a class="btn btn-sm btn-primary" asp-action="AddDepartment" asp-controller="Department" asp-route-id="@d.DepartmentID">Edit</a>
                       @* <a class="btn btn-sm btn-info" asp-action="Details" asp-controller="Department" asp-route-id="@d.DepartmentID">Details</a>*@
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@d.DepartmentID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/js/JavaScript.js"></script>
}

