@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Slider</title>
    <style>
        .slider-container {
            width: 300px;
            height: 300px; /* Set a fixed height for the container */
            overflow: hidden;
            margin: 0 auto;
            position: relative;
        }

        .slider-wrapper {
            display: flex;
            transition: transform 0.3s ease-in-out;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
        }

        .slider-item {
            min-width: 100%;
        }

        img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain; /* Ensure the image fits within its container */
            margin: auto; /* Center the image within the slider-item */
        }
    </style>
</head>
<body>

    <div class="slider-container">
        <div class="slider-wrapper">
            <div class="slider-item">
                <img src="~/js/download.png" alt="Image 1">
            </div>
        </div>
    </div>

</body>
</html>
